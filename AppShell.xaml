<?xml version="1.0" encoding="UTF-8" ?>
<Shell x:Class="MauiFrontend.AppShell"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:MauiFrontend.Views"
       xmlns:mi="http://www.aathifmahir.com/dotnet/2022/maui/icons"
       xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
       Title="MauiFrontend"
       Shell.NavBarIsVisible="False">

    <!-- =============== -->
    <!-- Thanh TabBar chính -->
    <!-- =============== -->
    <TabBar>
        <!-- Trang chủ -->
        <ShellContent Title="Trang chủ"
                      Icon="{mi:Material Icon=Home, IconColor=Black}"
                      Route="HomePage"
                      ContentTemplate="{DataTemplate views:HomePage}" />

        <!-- Giỏ hàng -->
        <ShellContent Title="Giỏ hàng"
                      Icon="{mi:Material Icon=ShoppingCart, IconColor=Black}"
                      Route="CartPage"
                      ContentTemplate="{DataTemplate views:CartPage}" />

        <!-- Tài khoản -->
        <ShellContent 
    Title="{Binding AccountTitle}"
    Icon="{mi:Material Icon=AccountCircle, IconColor=Black}"
    Route="AccountPage"
    ContentTemplate="{DataTemplate views:AccountPage}" />

    </TabBar>

    <!-- =============== -->
    <!-- Các trang KHÔNG hiển thị trên navbar -->
    <!-- =============== -->
    <ShellContent Route="LoginPage"
                  ContentTemplate="{DataTemplate views:LoginPage}"
                  Shell.PresentationMode="ModalAnimated" />
</Shell>
