<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiFrontend.ViewModels"
             x:Class="MauiFrontend.Views.AccountPage"
             Title="Tài khoản">

    <ContentPage.BindingContext>
        <viewmodels:AccountPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="{Binding UserName}" 
               FontAttributes="Bold"
               FontSize="20"
               HorizontalOptions="Center" />

        <!-- Nút Đăng nhập -->
        <Button Text="Đăng nhập"
                Command="{Binding ToLoginPageCommand}"
                IsVisible="{Binding IsLoggedOut}" />

        <!-- Nút Đăng xuất -->
        <Button Text="Đăng xuất"
                Command="{Binding LogoutCommand}"
                IsVisible="{Binding IsLoggedIn}"
                BackgroundColor="Red"
                TextColor="White" />
    </VerticalStackLayout>
</ContentPage>
